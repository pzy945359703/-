
@{
    ViewBag.Title = "AjaxDemo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<h2>Ajax的基本用法</h2>
<h5 class="btn-danger">直接用JQuery的Ajax实现</h5>
<style>
    #div1{background-color:black;}
</style>
<div id="div1"></div>
<script>
    $.ajax({
        url: '@Url.Action("Ajax1","Home")',
        success: function (result) { $("#div1").html(result); },
        error: function () { alter("更新div1出错了"); }
    });
</script>
